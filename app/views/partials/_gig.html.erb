<div class="next-gig">

  <div class="gig-info">
    <h4 class="venue"><%= @gig.name %></h4>
    <h5 class="address"><%= @gig.address %></h5>
    <h6 class="date"><%= @gig.date %></h6>
    <p class="details"><%= @gig.details %></p>
    <%= button_to 'New Gig', new_gig_path, method: :get %>
  </div>

  <div class="map">
    <iframe
      width="600"
      height="450"
      frameborder="0" style="border:0"
      src="https://www.google.com/maps/embed/v1/directions?key=<%= ENV.fetch('API_KEY') %>
        &origin=current+location
        &destination=<%= @gig.latitude %>,<%= @gig.longitude %>">
    </iframe>
  </div>

</div>
